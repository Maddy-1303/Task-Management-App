<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <p id="notice"><%= notice %></p>

          <p>
            <strong>Name:</strong>
            <%= @task.name %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @task.description %>
          </p>

          <p>
            <strong>Status:</strong>
            <%= @task.status %>
          </p>

          <p>
            <strong>Visibility:</strong>
            <%= @task.visibility %>
          </p>

          <td><%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-outline-success', style: 'background-color: blue; color: white;', onmouseover: "this.style.backgroundColor='purple';", onmouseout: "this.style.backgroundColor='blue';" %></td>
          <td><%= link_to 'Back',tasks_path, class: 'btn btn-outline-success', style: 'background-color: blue; color: white;', onmouseover: "this.style.backgroundColor='purple';", onmouseout: "this.style.backgroundColor='blue';" %></td>
        </div>
      </div>
    </div>
  </div>
</div>
